<Project Sdk="Microsoft.NET.Sdk.Maui">

  <PropertyGroup>
    <OutputType>App</OutputType>
    <TargetFramework>net6.0-ios;net6.0-android;net6.0-windows</TargetFramework>
    <UseMaui>true</UseMaui>

    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>

    <ApplicationTitle>WeatherApp</ApplicationTitle>
    <ApplicationId>com.example.weatherapp</ApplicationId>
    <RootNamespace>WeatherApp</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Maui.Controls" Version="6.0.400" />
    <PackageReference Include="Microsoft.Maui.Essentials" Version="6.0.400" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Net.Http.Json" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <MauiFont Include="Resources\Fonts\OpenSans-Regular.ttf" />
    <MauiImage Include="Resources\Images\weather_icon.png" />
  </ItemGroup>

</Project>
